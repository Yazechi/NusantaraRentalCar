# Nusantara Rental Car - Environment Variables
# Copy this file to .env and fill in your values

# ========================================
# DATABASE CONFIGURATION
# ========================================

DB_HOST=localhost
DB_USER=rental_user
DB_PASS=your_secure_password_here
DB_NAME=nusantara_rental_car

# ========================================
# SITE CONFIGURATION
# ========================================

SITE_URL=https://yourdomain.com
SITE_NAME="Nusantara Rental Car"

# Environment: development or production
APP_ENV=production

# ========================================
# EMAIL CONFIGURATION (SMTP)
# ========================================

# SMTP Server
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourdomain.com
SMTP_FROM_NAME="Nusantara Rental Car"

# Admin email for notifications
ADMIN_EMAIL=admin@yourdomain.com

# ========================================
# SECURITY CONFIGURATION
# ========================================

# Session timeout (in seconds, 1800 = 30 minutes)
SESSION_TIMEOUT=1800

# Password minimum length
PASSWORD_MIN_LENGTH=6

# Upload file size limit (in bytes, 2097152 = 2MB)
UPLOAD_MAX_SIZE=2097152

# ========================================
# WHATSAPP CONFIGURATION
# ========================================

# WhatsApp number for orders (without + or spaces)
# Example: 628123456789 for +62 812-3456-789
WHATSAPP_NUMBER=628123456789

# ========================================
# PAYMENT CONFIGURATION (Future)
# ========================================

# Uncomment when integrating payment gateway
# PAYMENT_GATEWAY=midtrans
# MIDTRANS_SERVER_KEY=your-server-key
# MIDTRANS_CLIENT_KEY=your-client-key
# MIDTRANS_IS_PRODUCTION=false

# ========================================
# BACKUP CONFIGURATION
# ========================================

# Directory for automatic backups
BACKUP_DIR=/backups/nusantara

# Backup retention days
BACKUP_RETENTION_DAYS=30

# ========================================
# NOTES
# ========================================

# For Gmail SMTP:
# 1. Enable 2-Factor Authentication
# 2. Generate App Password: https://myaccount.google.com/apppasswords
# 3. Use the generated 16-character password in SMTP_PASS

# For production:
# 1. Never commit .env file to version control
# 2. Add .env to .gitignore
# 3. Use strong passwords (minimum 12 characters, mixed case, numbers, symbols)
# 4. Change default admin password immediately after deployment
